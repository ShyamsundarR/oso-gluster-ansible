# Basename of the CA file for Gluster TLS (base.key, base.pem)
# Will be created if it doesn't exist
GLUSTER_CA_FILE_BASE: "gluster_ca"

# Key size for the Gluster CA key
GLUSTER_CA_KEY_SIZE: 4096

# Key size for the Gluster node TLS keys
GLUSTER_NODE_KEY_SIZE: 4096

# Number of days CA and host keys should be valid
GLUSTER_KEY_VALID_DAYS: "3650"

ansible_ssh_common_args: '-o StrictHostKeyChecking=no'
